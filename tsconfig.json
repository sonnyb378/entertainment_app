{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.js", "**/*.jsx", "firebase.js", "jest.setup.js", "**/*.ts", "**/*.tsx"], //, "**/*.ts", "**/*.tsx", "__mocks__/styleMock.js", "__mocks__/fileMock.js"
  "exclude": ["node_modules"]
}
